@{
  Layout = "_Layout";
}

@using SweetSavory.Models;
@model List<SweetSavory.Models.Flavor>;

<h1>Flavors</h1>
<hr>
<br>
@if (@Model.Count == 0)
{
  <h4>No flavors have been added yet!</h4>
} 

@foreach (Flavor flavor in Model)
{
  <li>@Html.ActionLink($"{flavor.FlavorName}", "Details", new { id = flavor.FlavorId})</li>
}
<br>
<hr>
@Html.ActionLink("Add New Flavor", "Create", "Flavors", null, new { @class = "btn btn-outline-info"})