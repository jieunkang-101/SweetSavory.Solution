@{
  Layout = "_Layout";
}

@using SweetSavory.ViewModels
@model RegisterViewModel

<br>
<br>
<div class="card">
  <br>
  <h3 class="text-center">Register a new acoount</h3>
  <br>
  <hr />
  @using (Html.BeginForm("Register", "Account", FormMethod.Post))
  {
    @Html.TextBoxFor(user=> user.Email, new {@class="form-control", placeholder="Email"})
    @Html.PasswordFor(user=> user.Password, new {@class="form-control", placeholder="Password"})
    @Html.PasswordFor(user=> user.ConfirmPassword, new {@class="form-control", placeholder="Confrim Password"})
    <input type="submit" value="Sign up" class="btn btn-outline-success form-control" />
  }
  <br>
  <p>Have an account? <span>@Html.ActionLink("Log in", "Login")</span></p>
</div>  
