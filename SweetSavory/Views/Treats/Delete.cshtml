@{
  Layout = "_Layout";
}

@using SweetSavory.Models
@using System.Security.Claims
@model SweetSavory.Models.Treat

<br>
<br>
@if(User.Identity.IsAuthenticated)
{
  <div class="card">
    <h4>Are you sure you want to delete this?</h4>
    <hr>
    <h5>@Html.DisplayName("Treat Name"): @Html.DisplayFor(model => model.TreatName)</h5>
    <br>
    @using (Html.BeginForm())
    {
      <input type="submit" value="Delete" class = "btn btn-outline-info" />
    }
  </div>  
}
else
{
  <h4>You are not authorized to Delete this Treat.</h4>
}    
<br>
@Html.ActionLink("Back to List", "Index", "Treats", null, new { @class = "btn btn-outline-info"})